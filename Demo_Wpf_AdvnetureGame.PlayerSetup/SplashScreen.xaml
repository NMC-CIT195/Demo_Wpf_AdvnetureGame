<Window x:Class="Demo_Wpf_AdventureGame.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo_Wpf_AdventureGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Demo_Wpf_AdventureGame;component/Assets/Images/splashscreen_space.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Name="Title" Content="Project: Aion" Panel.ZIndex="4" FontSize="42
                       " FontFamily="Courier New" FontWeight="Bold" Foreground="White" Opacity="0.6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Grid.Row="1" Name="ButtonPlay" Content=" Play " HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,10,10,10" FontSize="24" Opacity="0.6"/>
        <Button Grid.Row="2" Name="ButtonQuit" Content=" Quit " HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,10,10,10" Click="ButtonQuit_Click" FontSize="24" Opacity="0.6"/>
    </Grid>

</Window>
